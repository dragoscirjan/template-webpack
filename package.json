{
  "name": "template-javascript-webpack",
  "version": "0.0.1",
  "description": "Javascript Project Template",
  "private": true,
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run webpack -- --env.mode production",
    "clean": "rimraf dist",
    "prettier": "prettier",
    "prettier:check": "npm run prettier -- --list-different \"src/**/*.{js,jsx}\" && npm run prettier -- --list-different \"test/**/*.{js,jsx}\"",
    "prettier:write": "npm run prettier -- --write \"src/**/*.{js,jsx}\" && npm run prettier -- --write \"test/**/*.{js,jsx}\"",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint:write && npm run test",
    "--inspector": "jsinspector server --port 9543",
    "jscpd": "jscpd ./src --blame",
    "jscpd:html": "npm run jscpd -- --reporters html",
    "lint": "eslint ./{src,test}/**/*.test.js --fix",
    "lint:write": "npm run lint -- --fix",
    "lint:watch": "nodemon --exec \"npm run lint\"",
    "prerelease": "npm run build",
    "release": "release-it --ci --no-npm.publish",
    "//preserve": "npm run clean",
    "start": "webpack-dev-server --env.mode development --open",
    "start:watch": "npm run start -- --watch",
    "test": "nyc --extension .js mocha --forbid-only \"test/**/*.test.js\"",
    "test:html": "nyc --reporter html --extension .js mocha --forbid-only \"test/**/*.test.js\"",
    "test:watch": "nodemon --exec \"npm run test\"",
    "webpack": "webpack --config webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/dragos.cirjan/template-javascript-webpack.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/dragos.cirjan/template.javascript/issues"
  },
  "homepage": "https://gitlab.com/dragos.cirjan/template.javascript#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@release-it/conventional-changelog": "^1.1.0",
    "autoprefixer": "^9.7.6",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^6.2.2",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.2.0",
    "jscpd": "^2.0.16",
    "jscpd-badge-reporter": "^1.1.3",
    "jsinspector": "^2.0.4",
    "mocha": "^7.0.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.1",
    "prettier": "^1.19.1",
    "release-it": "^12.6.1",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  },
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "file-loader": "^6.0.0",
    "node-sass": "^4.14.0",
    "sass-loader": "^8.0.2",
    "script-loader": "^0.7.2",
    "style-loader": "^1.2.0",
    "svg-inline-loader": "^0.8.2"
  }
}
